.grid-tile-large 

    .work-illu-group,
    .work-content-shrinked
        display none

    section.work
        display flex
        flex-direction row
        align-items center
        justify-content stretch
        align-content stretch


    .work-content-long
        display flex
        flex-direction row
        align-items center
        justify-content stretch
        align-content stretch
        width 100%

        section
            display inline-block
            width 50%
            position relative

    .work-illu
        height auto

.work-caroussel
    .work-illu.work-illu-main
        position absolute
        top 0
        bottom 20px