.work-illu-panel
    display inline-block
    width 0
    /* height is fixed with js */
    background-color #ccc
    /* box-shadow 0 0 8px 0px rgba(175, 175, 175, 0.62) inset */
    vertical-align top
    transition width 800ms ease-in-out
    overflow hidden

    &.dragged
        transition none

.work-illu-primar.work-illu
