.grid-tile-large 

    .work-illu-group,
    .work-content-shrinked
        display none

    section.work
        display flex
        flex-direction row
        align-items center
        justify-content stretch
        align-content stretch


    .work-content-long
        display flex
        flex-direction row
        align-items stretch
        justify-content stretch
        align-content stretch
        width 100%

        section
            /*display inline-block*/
            width 50%
            position relative

    .work-illu
        height auto

.work-content-caroussel
    display flex
    flex-direction column
    align-items stretch
    justify-content stretch
    align-content stretch

    .work-illu-main
        flex 1 1 420px
        div
            position absolute
            background-size contain
            background-repeat no-repeat
            top 0
            bottom 0

    .work-illu-secondary-group
        flex 0 1
        display inline-block
        padding 5px

        .work-illu
            margin 5px
            width 60px
            height 60px
            background-size cover
            background-position center
