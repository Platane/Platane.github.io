
miniatureSize = 60px

leftArrow( borderSize=2px, arrowSize=20px )
        
    position relative
    border-right solid borderSize

    &:before
    &:after
        content ''
        position absolute
        border-top solid arrowSize transparent
        border-bottom solid arrowSize transparent
        border-left solid arrowSize
        position absolute
        width 1px
        height 1px
        right (- (arrowSize+borderSize ))
        top 20%
        transition border 300ms , right 300ms , top 300ms

    &:after
        border-left-color #fff
        right (- (arrowSize ))



