
ul.grid
    position relative
    list-style none
    padding 0


    li.grid-tile
        margin 0
        padding 10px
        position absolute
        width 33.3%

        &.grid-animated
            will-change transform -webkit-transform -moz-transform
            transition transform 600ms ease 0ms, top 600ms ease 0ms, left 600ms ease 0ms


@media screen and (max-width: 980px)
    ul.grid li.grid-tile
        width 50%

@media screen and (max-width: 640px)
    ul.grid li.grid-tile
        width 100%

.work-list

    center(   1150px   ,   50px   )

    .work
        cursor pointer
        display block
        position relative
        width 100%
        
    
section.work
    background-color  rgba(33,33,33,0.1)
    center( 360px )
    

workBackColor = #FFF


.work-illu
    display inline-block
    position relative
    width 100%
    height 65%
    overflow hidden

    div
        background-size cover
        background-position center
        width 100%
        height 100%
    
    &.work-illu-skewed
        
        perspective 220px
        transition perspective 400ms ease
        div
                
            transform rotateZ(3deg) rotateY(13deg) translate3d(0px,-10%,0px)
            transition transform 400ms ease

            transform-style preserve-3d
            width 130%
            height 120%
