.work-content-long,
.work-illu-secondary-group
    display none

.work-content
    padding 10px

.work-content-shrinked
    height  35%
    overflow hidden
    position relative
    background workBackColor
    
    .hide-bar
        background-image  linear-gradient( 
            0deg ,
            workBackColor 0% ,
            rgba( red( workBackColor ) , green( workBackColor ) , blue( workBackColor ) , 0 ) 100%
        )
        height 35%
        width 100%
        position absolute
        bottom 0
