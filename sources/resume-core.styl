body
    margin : 0
    font-size : 12pt

.resume
    /* size and position */
    max-width : 700px
    margin-left : auto
    margin-right : auto

    /* flex display */
    display : flex
    flex-direction : column
    flex-wrap : no-wrap
    justify-content : space-around
    align-items : stretch

    padding : 0.5em

    margin-top : 1em
    margin-bottom : 1em

    /* cool shadow */
    box-shadow : 0 0 20px 0 #333

    /*
    &>*
        
        padding-top : 1em
        padding-left : 2em
        padding-bottom : 0.5em
        padding-right : 1em
        
        position : relative

        margin-top : 1.5em
        border-top : solid 2px #555

        &:first-child
            margin-top: 0
            border-top : none
    */

header
    display : flex
    align-items : center

// cards are links to socials media displayed as icons
.card
    display : flex
    flex-direction : column
    flex : 1
    margin-right 14px
    padding 10px

    .ext-accounts
        .icon 
            font-size : 1.5em
            margin : 0.1em
            transition : transform 110ms
            text-decoration : none
            &:hover
                transform : rotateZ( 30deg )
                

    span.icon
        font-size : 1.1em
        margin : 0.1em


.quote
    flex : 1

    text-align : justify

    padding : 1em

    text-indent : 35px

    position : relative

    &:before
        content : '\201c\0A0'
        font-size : 120px
        position : absolute
        left : -30px
        line-height : 0.4
        opacity : 0.25
    
    &:after
        content : '\201d\0A0'
        content : ''
    

// place the h1 label outside of the box
.section-label
    //position : absolute
    //top : -1.2em
    margin : 0
    margin-left : 1em

.section-content
    padding-top : 1em
    padding-left : calc( 2em + 40px )
    padding-bottom : 0.5em
    padding-right : 1em
        
    position : relative

    border-top : solid 2px #555

    &:first-child
        margin-top: 0
        border-top : none


// reset list
ul
    margin 0
    padding-left 40px

li
    list-style : none
    margin-top : 0.5em
    position : relative

    &:first-child
        margin-top : 0


.xp,
.trainning
    &>div
        text-align : justify
.skill
    text-align : justify

// place the date outside of the box
.when
    position : absolute
    left : -7em
    font-size : 0.9em
// make place for the date
.xp-section,
.training-section
    .list
        margin-left : 3em


.skills-section
    .section-content
        display : flex
        align-items : center

        .tag-cloud
            flex : 1 0 230px


// space between subject and info
.info
    &:before
        content : '\0A0'



/**
 * alter before print
 **/
@media print
    .resume
        width : 20cm
        max-width : none
        height : 29cm
        padding : 0
        box-shadow : none
        margin-top : 0
        margin-bottom : 0


.resume.printable
    width : 20cm
    max-width : none
    padding : 0
    box-shadow : none
    margin-top : 0
    margin-bottom : 0
    display : block

        


