@import 'main'
@import 'const'
@import 'md'

body
	forestBackground()


article
	position relative
header
	display block
	position relative
	width 100%
	height 90%
	max-height 500px
	overflow hidden

	.article-ban
		display block
		position initial
		background-size cover
		background-position center
		width 100%
		height 100%

	.article-ban-overlay
		display block
		position absolute
		top 0
		width 100%
		height 100%
		background linear-gradient( 0deg , rgba(0,0,0,0.7) 0% , rgba(0,0,0,0) 70% )

.article-date
	color  #eee
	font-family "Lucida Grande","Lucida Sans Unicode","Lucida Sans",Geneva,Verdana,sans-serif
	font-size 12px
	z-index 9
	position absolute
	bottom 2px
	right 30px

.article-title	
	font-family "Lucida Grande","Lucida Sans Unicode","Lucida Sans",Geneva,Verdana,sans-serif
	font-size 80px

	z-index 9
	position absolute
	bottom 5%
	left 100px
	a
		& ,
		&:visited ,
		&:hover
			color  #fff
			text-decoration none

.article-content
	font-size 22px
	line-height 33px
	font-family freight-text-pro, Georgia, Cambria, 'Times New Roman', Times, serif

.article-body
	center( 820px , 2% )
	padding-top 60px